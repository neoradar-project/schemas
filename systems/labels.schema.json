{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "ground": {
      "type": "object",
      "properties": {
        "default": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "itemName": {
                  "anyOf": [
                    {
                      "type": "string",
                      "enum": [
                        "stopped",
                        "timestamp",
                        "verticalSpeed",
                        "verticalTrend",
                        "altitude",
                        "agl",
                        "onGround",
                        "groundSpeed",
                        "reportedHeading",
                        "trackHeading",
                        "transponder",
                        "latLon",
                        "trueAltitude",
                        "pressureAltitude"
                      ]
                    },
                    {
                      "type": "string",
                      "enum": [
                        "flightRule",
                        "rawType",
                        "icaoTransponderEquipment",
                        "icaoEquipment",
                        "icaoWakeCategory",
                        "acShortType",
                        "origin",
                        "destination",
                        "alternate",
                        "plannedTas",
                        "plannedFlightLevel",
                        "rmk",
                        "flightTimeHours",
                        "flightTimeMinutes",
                        "fuelTimeHours",
                        "fuelTimeMinutes",
                        "eobt",
                        "aobt",
                        "isValid",
                        "voiceType"
                      ]
                    },
                    {
                      "type": "string",
                      "enum": ["callsign", "type", "isTimingOut", "lastPositionUpdateReceivedAt", "squawk", "latestTransponderStatus"]
                    },
                    {
                      "type": "string",
                      "enum": [
                        "clearedFlightLevel",
                        "assignedHeading",
                        "assignedSpeed",
                        "assignedMach",
                        "assignedVerticalRate",
                        "clearanceIssued",
                        "assignedSquawk",
                        "ownedByMe",
                        "ownedByCallsign",
                        "scratchpad",
                        "groundStatus",
                        "clearanceQueuePosition",
                        "attentionState"
                      ]
                    },
                    {
                      "type": "string",
                      "enum": ["sid", "star", "isAmended", "depRunway", "arrRunway", "rawRoute", "hadStar", "hadSid"]
                    },
                    {
                      "type": "string",
                      "enum": [
                        "isArrival",
                        "isDeparture",
                        "isMyDeparture",
                        "isMyArrival",
                        "suggestedStar",
                        "suggestedSid",
                        "suggestedDepRunway",
                        "suggestedArrRunway",
                        "myCallsign",
                        "ownedByID",
                        "computedSpeed",
                        "computedCFL",
                        "text"
                      ]
                    }
                  ]
                },
                "truncate": {
                  "anyOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "number"
                      },
                      "minItems": 2,
                      "maxItems": 2
                    },
                    {
                      "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "placeholder": {
                  "type": "string"
                },
                "prefix": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "suffix": {
                  "type": "string"
                },
                "mapping": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "padWithZeroLeft": {
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "string",
                      "pattern": "^[&=][A-z0-9_-]+"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "padWithZeroRight": {
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "string",
                      "pattern": "^[&=][A-z0-9_-]+"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "fontSize": {
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "type": "string",
                      "pattern": "^[&=][A-z0-9_-]+"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "fontWeight": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "fontFamily": {
                  "type": "string"
                },
                "lineHeight": {
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "color": {
                  "anyOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "number"
                      },
                      "minItems": 3,
                      "maxItems": 3
                    },
                    {
                      "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "separatorBefore": {
                  "type": "boolean",
                  "default": true
                },
                "showPlusMinus": {
                  "type": "boolean",
                  "default": false
                },
                "value": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                    },
                    {
                      "type": "array",
                      "items": {
                        "$ref": "#/properties/ground/properties/default/items/items/properties/fontSize/anyOf/1"
                      }
                    }
                  ]
                },
                "leftClick": {
                  "type": "string"
                },
                "rightClick": {
                  "type": "string"
                },
                "middleClick": {
                  "type": "string"
                }
              },
              "required": ["itemName"],
              "additionalProperties": false
            }
          }
        },
        "arrival": {
          "$ref": "#/properties/ground/properties/default"
        },
        "departure": {
          "$ref": "#/properties/ground/properties/default"
        },
        "detailed": {
          "$ref": "#/properties/ground/properties/default"
        },
        "styleVariants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "applyWhen": {
                "anyOf": [
                  {
                    "anyOf": [
                      {
                        "type": "array",
                        "minItems": 3,
                        "maxItems": 3,
                        "items": [
                          {
                            "type": "string",
                            "enum": ["==", "!=", "<", "<=", ">", ">=", "beginsWith", "endsWith", "contains"]
                          },
                          {
                            "$ref": "#/properties/ground/properties/default/items/items/properties/itemName"
                          },
                          {
                            "type": ["string", "number"]
                          }
                        ]
                      },
                      {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": [
                          {
                            "type": "string",
                            "enum": ["AND", "OR", "NOT"]
                          },
                          {
                            "type": "array",
                            "items": {
                              "anyOf": [
                                {
                                  "$ref": "#/properties/ground/properties/styleVariants/items/properties/applyWhen/anyOf/0"
                                },
                                {
                                  "type": "string",
                                  "pattern": "^\\$[A-z0-9_-]+"
                                }
                              ]
                            }
                          }
                        ]
                      },
                      {
                        "type": "array",
                        "minItems": 3,
                        "maxItems": 3,
                        "items": [
                          {
                            "$ref": "#/properties/ground/properties/styleVariants/items/properties/applyWhen/anyOf/0/anyOf/1/items/0"
                          },
                          {
                            "type": "string",
                            "enum": ["notEmpty", "isEmpty"]
                          },
                          {
                            "$ref": "#/properties/ground/properties/default/items/items/properties/itemName"
                          }
                        ]
                      },
                      {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": [
                          {
                            "$ref": "#/properties/ground/properties/styleVariants/items/properties/applyWhen/anyOf/0/anyOf/2/items/1"
                          },
                          {
                            "$ref": "#/properties/ground/properties/default/items/items/properties/itemName"
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "$ref": "#/properties/ground/properties/styleVariants/items/properties/applyWhen/anyOf/0/anyOf/1/items/1/items/anyOf/1"
                  }
                ]
              },
              "applyToIsDeparture": {
                "type": "boolean"
              },
              "applyToIsArrival": {
                "type": "boolean"
              },
              "font": {
                "type": "string"
              },
              "fontSize": {
                "type": "number"
              },
              "fontWeight": {
                "type": "string",
                "enum": ["normal", "bold", "bolder", "lighter", "100", "200", "300", "400", "500", "600", "700", "800", "900"]
              },
              "lineHeight": {
                "type": "number"
              },
              "textColor": {
                "$ref": "#/properties/ground/properties/default/items/items/properties/color/anyOf/0"
              },
              "textColorForState": {
                "type": "object",
                "additionalProperties": {
                  "$ref": "#/properties/ground/properties/default/items/items/properties/color/anyOf/0"
                },
                "propertyNames": {
                  "enum": ["kUnconcerned", "kNotified", "kIncomingTransfer", "kAssumed", "kOutgoingTransfer", "kIntruder"]
                }
              },
              "backgroundColor": {
                "$ref": "#/properties/ground/properties/default/items/items/properties/color/anyOf/0"
              },
              "backgroundColorOpacity": {
                "type": "number",
                "default": 1
              },
              "roundedCorners": {
                "type": "number",
                "default": 0
              },
              "detailedBackgroundColor": {
                "$ref": "#/properties/ground/properties/default/items/items/properties/color/anyOf/0"
              },
              "detailedBackgroundColorOpacity": {
                "type": "number",
                "default": 1
              },
              "detailedRoundedCorners": {
                "type": "number",
                "default": 0
              },
              "detailedTextColor": {
                "$ref": "#/properties/ground/properties/default/items/items/properties/color/anyOf/0"
              },
              "detailedFontSize": {
                "type": "number"
              },
              "detailedFontWeight": {
                "$ref": "#/properties/ground/properties/styleVariants/items/properties/fontWeight"
              },
              "tagItemPaddingY": {
                "type": "number",
                "default": 2
              },
              "tagItemPaddingX": {
                "type": "number",
                "default": 3
              },
              "tagContainerPaddingLeft": {
                "type": "number",
                "default": 2
              },
              "tagContainerPaddingRight": {
                "type": "number",
                "default": 2
              },
              "tagContainerPaddingTop": {
                "type": "number",
                "default": 2
              },
              "tagContainerPaddingBottom": {
                "type": "number",
                "default": 2
              },
              "detailedTagContainerPaddingLeft": {
                "type": "number"
              },
              "detailedTagContainerPaddingRight": {
                "type": "number"
              },
              "detailedTagContainerPaddingTop": {
                "type": "number"
              },
              "detailedTagContainerPaddingBottom": {
                "type": "number"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["default", "arrival", "departure", "detailed", "styleVariants"],
      "additionalProperties": false
    },
    "airborne": {
      "type": "object",
      "properties": {
        "unconcerned": {
          "$ref": "#/properties/ground/properties/default"
        },
        "concerned": {
          "$ref": "#/properties/ground/properties/default"
        },
        "detailed": {
          "$ref": "#/properties/ground/properties/default"
        },
        "styleVariants": {
          "type": "array",
          "items": {
            "$ref": "#/properties/ground/properties/styleVariants/items"
          }
        }
      },
      "required": ["unconcerned", "concerned", "detailed", "styleVariants"],
      "additionalProperties": false
    }
  },
  "required": ["ground", "airborne"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
