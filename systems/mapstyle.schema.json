{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema to validate this file"
    },
    "inactiveSectorBackgroundColor": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 3,
          "maxItems": 3,
          "description": "RGB color array [r,g,b]"
        },
        {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 4,
          "maxItems": 4,
          "description": "RGBA color array [r,g,b,a]"
        }
      ],
      "description": "Background color of the inactive sector, this is the default color of the map"
    },
    "activeSectorBackgroundColor": {
      "anyOf": [
        {
          "$ref": "#/properties/inactiveSectorBackgroundColor/anyOf/0"
        },
        {
          "$ref": "#/properties/inactiveSectorBackgroundColor/anyOf/1"
        }
      ],
      "description": "Background color of the user's current active sector"
    },
    "areaOfInterestBackgroundColor": {
      "anyOf": [
        {
          "$ref": "#/properties/inactiveSectorBackgroundColor/anyOf/0"
        },
        {
          "$ref": "#/properties/inactiveSectorBackgroundColor/anyOf/1"
        }
      ],
      "description": "Background color of the area of interest, which is around 15% larger than the user's active sector. This is optional and you do not have to display this"
    },
    "neighborSectorBorderLineColor": {
      "$ref": "#/properties/areaOfInterestBackgroundColor"
    },
    "neighborSectorBorderDashArray": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": [
        {
          "type": "number"
        },
        {
          "type": "number"
        }
      ],
      "description": "Dash array [length, gap]"
    },
    "neighborSectorBorderLineWidth": {
      "type": "number",
      "default": 1,
      "description": "Line width of the neighbor sector border, this is the line that separates your sector from another active neighbor sectors"
    },
    "extendedCenterlines": {
      "type": "object",
      "properties": {
        "lengthNm": {
          "type": "number",
          "description": "Length of the extended centerline in nautical miles"
        },
        "thresholdOffsetNm": {
          "type": "number",
          "default": 0,
          "description": "Offset of the extended centerline from the threshold in nautical miles"
        },
        "minorTickType": {
          "type": "string",
          "enum": [
            "none",
            "circle",
            "line",
            "leftSideLine",
            "rightSideLine"
          ],
          "default": "none",
          "description": "Type of the minor tick"
        },
        "minorTickSpacingNm": {
          "type": "number",
          "description": "Spacing between minor ticks in nautical miles"
        },
        "minorTickLengthNm": {
          "type": "number",
          "default": 0.5,
          "description": "Length of the minor tick in nautical miles, this does not apply to circle ticks"
        },
        "minorTickWidth": {
          "type": "number",
          "default": 1,
          "description": "Line width of the major tick, or the radius of the circle in arbitrary units"
        },
        "minorTickColor": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        },
        "majorTickType": {
          "type": "string",
          "enum": [
            "none",
            "circle",
            "line",
            "leftSideLine",
            "rightSideLine"
          ],
          "default": "none",
          "description": "Type of the major tick"
        },
        "majorTickSpacingNm": {
          "type": "number",
          "description": "Spacing between major ticks in nautical miles"
        },
        "majorTickLengthNm": {
          "type": "number",
          "default": 1,
          "description": "Length of the major tick in nautical miles, this does not apply to circle ticks"
        },
        "majorTickWidth": {
          "type": "number",
          "default": 1,
          "description": "Line width of the major tick, or the radius of the circle"
        },
        "majorTickColor": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        },
        "color": {
          "$ref": "#/properties/areaOfInterestBackgroundColor"
        },
        "lineWidth": {
          "type": "number",
          "default": 1
        },
        "dashArray": {
          "$ref": "#/properties/neighborSectorBorderDashArray",
          "description": "Dash array [length, gap]"
        }
      },
      "required": [
        "lengthNm",
        "color"
      ],
      "additionalProperties": false,
      "description": "Extended centerlines configuration"
    },
    "distanceMeasurementTool": {
      "type": "object",
      "properties": {
        "startCircleColour": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        },
        "endCircleColour": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        },
        "dashedLineColour": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        },
        "distanceTextColour": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        },
        "startBearingTextColour": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        },
        "endBearingTextColour": {
          "$ref": "#/properties/areaOfInterestBackgroundColor",
          "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
        }
      },
      "additionalProperties": false,
      "description": "Distance measurement tool configuration"
    },
    "layerStyles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "lineStyle": {
            "type": "object",
            "properties": {
              "color": {
                "$ref": "#/properties/areaOfInterestBackgroundColor"
              },
              "width": {
                "type": "number",
                "default": 1
              },
              "opacity": {
                "type": "number",
                "default": 1
              },
              "dashArray": {
                "$ref": "#/properties/neighborSectorBorderDashArray",
                "description": "Dash array [length, gap]"
              }
            },
            "required": [
              "color"
            ],
            "additionalProperties": false
          },
          "fillStyle": {
            "type": "object",
            "properties": {
              "color": {
                "$ref": "#/properties/areaOfInterestBackgroundColor"
              },
              "opacity": {
                "type": "number",
                "default": 1
              }
            },
            "required": [
              "color"
            ],
            "additionalProperties": false
          },
          "pointStyle": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "sprite",
                  "circle",
                  "square",
                  "diamond",
                  "cross"
                ],
                "default": "circle"
              },
              "size": {
                "type": "number",
                "default": 10,
                "description": "Size of the point in cartesian units"
              },
              "sprite": {
                "type": "string",
                "description": "Name of the sprite defined in the sprite atlas"
              },
              "fillColor": {
                "$ref": "#/properties/areaOfInterestBackgroundColor",
                "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
              },
              "fillOpacity": {
                "type": "number",
                "default": 1
              },
              "strokeColor": {
                "$ref": "#/properties/areaOfInterestBackgroundColor",
                "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
              },
              "strokeOpacity": {
                "type": "number",
                "default": 1
              },
              "strokeWidth": {
                "type": "number",
                "default": 1
              },
              "rotation": {
                "type": "number",
                "default": 0,
                "description": "Rotation of the symbol in degrees"
              }
            },
            "additionalProperties": false
          },
          "textStyle": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "color": {
                "$ref": "#/properties/areaOfInterestBackgroundColor",
                "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
              },
              "fontFamily": {
                "type": "string",
                "default": "RobotoMono-Regular"
              },
              "fontSize": {
                "type": "number",
                "default": 12
              },
              "fontWeight": {
                "type": "string",
                "enum": [
                  "normal",
                  "bold",
                  "bolder",
                  "lighter",
                  "100",
                  "200",
                  "300",
                  "400",
                  "500",
                  "600",
                  "700",
                  "800",
                  "900"
                ],
                "default": "normal"
              },
              "size": {
                "type": "number",
                "default": 10
              },
              "offset": {
                "type": "array",
                "items": {
                  "type": "number"
                },
                "minItems": 2,
                "maxItems": 2,
                "default": [
                  0,
                  0
                ]
              },
              "anchor": {
                "type": "string",
                "enum": [
                  "start",
                  "middle",
                  "end"
                ],
                "default": "middle"
              },
              "baseline": {
                "type": "string",
                "enum": [
                  "top",
                  "middle",
                  "bottom",
                  "alphabetic"
                ],
                "default": "middle"
              },
              "letterSpacing": {
                "type": "number",
                "default": 0
              },
              "lineHeight": {
                "type": "number",
                "default": 0
              },
              "align": {
                "type": "string",
                "enum": [
                  "left",
                  "center",
                  "right"
                ],
                "default": "center"
              },
              "wordWrap": {
                "type": "boolean",
                "default": false
              },
              "wordWrapWidth": {
                "type": "number",
                "default": 100
              },
              "outlineColor": {
                "$ref": "#/properties/areaOfInterestBackgroundColor",
                "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
              },
              "outlineWidth": {
                "type": "number",
                "default": 0
              },
              "outlineOpacity": {
                "type": "number",
                "default": 1
              },
              "dropShadow": {
                "type": "boolean",
                "default": false
              },
              "dropShadowColor": {
                "$ref": "#/properties/areaOfInterestBackgroundColor",
                "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)",
                "default": [
                  0,
                  0,
                  0
                ]
              },
              "dropShadowAngle": {
                "type": "number",
                "default": 0.5235987755982988
              },
              "dropShadowBlur": {
                "type": "number",
                "default": 0
              },
              "dropShadowDistance": {
                "type": "number",
                "default": 5
              },
              "dropShadowOpacity": {
                "type": "number",
                "default": 1
              },
              "scaleWithZoom": {
                "type": "boolean",
                "default": true
              },
              "minZoom": {
                "type": "number"
              },
              "maxZoom": {
                "type": "number"
              },
              "padding": {
                "type": "number",
                "default": 0
              },
              "backgroundColor": {
                "$ref": "#/properties/areaOfInterestBackgroundColor",
                "description": "RGBA color array [r,g,b,a] or [r,g,b] (0-255, and 0-1 for a)"
              },
              "backgroundOpacity": {
                "type": "number",
                "default": 0
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "description": "Layer styles for the map, this is a dictionary of layer names to layer styles, and overrides the default values in the manifest for the layer"
    }
  },
  "required": [
    "inactiveSectorBackgroundColor",
    "activeSectorBackgroundColor",
    "neighborSectorBorderLineColor"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}